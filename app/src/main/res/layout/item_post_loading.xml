<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/shimmerView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:shimmer_dropoff="200"
    app:shimmer_height_ratio="1">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:cardCornerRadius="10dp"
            app:cardElevation="1dp"
            tools:layout_marginTop="16dp"
            tools:layout_marginHorizontal="16dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="16dp">

                <View
                    android:id="@+id/tvTitle1"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:background="@android:color/darker_gray"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:text="Lorem Ipsum"
                    />

                <View
                    android:id="@+id/tvBody1"
                    android:layout_width="240dp"
                    android:layout_height="16dp"
                    android:background="@android:color/darker_gray"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvTitle1"
                    app:layout_constraintStart_toStartOf="parent"
                    />

                <View
                    android:id="@+id/tvAuthorNameSymbol1"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/bg_circle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tvAuthorName1"
                    app:layout_constraintBottom_toBottomOf="@+id/tvAuthorCompany1"
                    tools:text="A"
                    />

                <View
                    android:id="@+id/tvAuthorName1"
                    android:layout_width="100dp"
                    android:layout_height="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:background="@android:color/darker_gray"
                    app:layout_constraintTop_toBottomOf="@+id/tvBody1"
                    app:layout_constraintStart_toEndOf="@+id/tvAuthorNameSymbol1"
                    />

                <View
                    android:id="@+id/tvAuthorCompany1"
                    android:layout_width="100dp"
                    android:layout_height="10dp"
                    android:layout_marginTop="6dp"
                    android:background="@android:color/darker_gray"
                    app:layout_constraintStart_toStartOf="@+id/tvAuthorName1"
                    app:layout_constraintTop_toBottomOf="@+id/tvAuthorName1"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/cardView1"
            app:cardCornerRadius="10dp"
            app:cardElevation="1dp"
            tools:layout_marginTop="16dp"
            tools:layout_marginHorizontal="16dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="16dp">

                <View
                    android:id="@+id/tvTitle2"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:background="@android:color/darker_gray"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:text="Lorem Ipsum"
                    />

                <View
                    android:id="@+id/tvBody2"
                    android:layout_width="240dp"
                    android:layout_height="16dp"
                    android:background="@android:color/darker_gray"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvTitle2"
                    app:layout_constraintStart_toStartOf="parent"
                    />

                <View
                    android:id="@+id/tvAuthorNameSymbol2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/bg_circle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tvAuthorName2"
                    app:layout_constraintBottom_toBottomOf="@+id/tvAuthorCompany2"
                    tools:text="A"
                    />

                <View
                    android:id="@+id/tvAuthorName2"
                    android:layout_width="100dp"
                    android:layout_height="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:background="@android:color/darker_gray"
                    app:layout_constraintTop_toBottomOf="@+id/tvBody2"
                    app:layout_constraintStart_toEndOf="@+id/tvAuthorNameSymbol2"
                    />

                <View
                    android:id="@+id/tvAuthorCompany2"
                    android:layout_width="100dp"
                    android:layout_height="10dp"
                    android:layout_marginTop="6dp"
                    android:background="@android:color/darker_gray"
                    app:layout_constraintStart_toStartOf="@+id/tvAuthorName2"
                    app:layout_constraintTop_toBottomOf="@+id/tvAuthorName2"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/cardView2"
            app:cardCornerRadius="10dp"
            app:cardElevation="1dp"
            tools:layout_marginTop="16dp"
            tools:layout_marginHorizontal="16dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="16dp">

                <View
                    android:id="@+id/tvTitle3"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:background="@android:color/darker_gray"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:text="Lorem Ipsum"
                    />

                <View
                    android:id="@+id/tvBody3"
                    android:layout_width="240dp"
                    android:layout_height="16dp"
                    android:background="@android:color/darker_gray"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvTitle3"
                    app:layout_constraintStart_toStartOf="parent"
                    />

                <View
                    android:id="@+id/tvAuthorNameSymbol3"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/bg_circle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tvAuthorName3"
                    app:layout_constraintBottom_toBottomOf="@+id/tvAuthorCompany3"
                    tools:text="A"
                    />

                <View
                    android:id="@+id/tvAuthorName3"
                    android:layout_width="100dp"
                    android:layout_height="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:background="@android:color/darker_gray"
                    app:layout_constraintTop_toBottomOf="@+id/tvBody3"
                    app:layout_constraintStart_toEndOf="@+id/tvAuthorNameSymbol3"
                    />

                <View
                    android:id="@+id/tvAuthorCompany3"
                    android:layout_width="100dp"
                    android:layout_height="10dp"
                    android:layout_marginTop="6dp"
                    android:background="@android:color/darker_gray"
                    app:layout_constraintStart_toStartOf="@+id/tvAuthorName3"
                    app:layout_constraintTop_toBottomOf="@+id/tvAuthorName3"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.facebook.shimmer.ShimmerFrameLayout>