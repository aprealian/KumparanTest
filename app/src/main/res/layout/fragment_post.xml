<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="post"
            type="me.aprilian.kumparantest.data.Post" />
        <variable
            name="adapter"
            type="me.aprilian.kumparantest.ui.CommentsAdapter" />
        <variable
            name="vm"
            type="me.aprilian.kumparantest.ui.PostViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F9F9FB">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingHorizontal="16dp"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/buttonBack"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_back"
                    app:layout_constraintTop_toTopOf="@+id/header"
                    app:layout_constraintBottom_toBottomOf="@+id/header"
                    app:layout_constraintStart_toStartOf="parent"
                    />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/header"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_rounded_line"
                    android:padding="10dp"
                    android:onClick="@{(view) -> vm.openUser(view, post.user)}"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                    <TextView
                        android:id="@+id/tvAuthorNameSymbol"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:background="@drawable/bg_circle"
                        android:gravity="center"
                        android:text="A"
                        android:textColor="@color/white"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        />
                    <TextView
                        android:id="@+id/tvAuthorName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:text="@{post.user.name}"
                        android:textColor="#6E6E70"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/tvAuthorNameSymbol"
                        tools:text="Aprilian"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:text="@string/post_author"
                        android:textColor="#BBBABA"
                        android:textSize="12sp"
                        app:layout_constraintTop_toBottomOf="@+id/tvAuthorName"
                        app:layout_constraintEnd_toStartOf="@+id/tvAuthorNameSymbol"
                        tools:text="Lorem Ipsum"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>


                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@{post.title}"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@+id/header"
                    tools:text="Lorem Ipsum"
                    />

                <TextView
                    android:id="@+id/tvBody"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="@{post.body}"
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@+id/tvTitle"
                    tools:text="This is the description.."
                    />

                <View
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:background="#45CACACA"
                    app:layout_constraintTop_toBottomOf="@+id/tvBody"
                    />

                <TextView
                    android:id="@+id/tvCommentCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="16dp"
                    android:textSize="14sp"
                    android:text="@string/comments"
                    app:layout_constraintTop_toBottomOf="@+id/line"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:text="Comments (56)"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvComments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:setAdapter="@{adapter}"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:layout_constraintTop_toBottomOf="@+id/container"
                tools:itemCount="3"
                tools:listitem="@layout/item_comment"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</layout>