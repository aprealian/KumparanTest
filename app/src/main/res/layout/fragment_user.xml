<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="user"
            type="me.aprilian.kumparantest.data.User" />
        <variable
            name="adapter"
            type="me.aprilian.kumparantest.ui.AlbumAdapter" />
        <variable
            name="vm"
            type="me.aprilian.kumparantest.ui.UserViewModel" />
        <import type="android.view.View"/>
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_page">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingHorizontal="16dp"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/buttonBack"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/ic_back"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    />

                <TextView
                    android:id="@+id/tvAuthorNameSymbol"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="@{String.valueOf(user.name.charAt(0))}"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:background="@drawable/bg_circle"
                    app:layout_constraintTop_toBottomOf="@+id/buttonBack"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />

                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:text="@{user.name}"
                    android:textColor="@color/purple_200"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@+id/tvAuthorNameSymbol"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="Lorem Ipsum"
                    />

                <TextView
                    android:id="@+id/tvUserEmailTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/email"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@+id/tvUserName"
                    />

                <TextView
                    android:id="@+id/tvUserEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{user.email}"
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@+id/tvUserEmailTitle"
                    tools:text="Lorem Ipsum"
                    />

                <TextView
                    android:id="@+id/tvUserAddressTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/address"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@+id/tvUserEmail"
                    />

                <TextView
                    android:id="@+id/tvUserAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{user.address.street+' '+user.address.city+' '+user.address.zipcode}"
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@+id/tvUserAddressTitle"
                    tools:text="This is the description.."
                    />

                <TextView
                    android:id="@+id/tvUserCompanyTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/company"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@+id/tvUserAddress"
                    tools:text="This is the description.."
                    />

                <TextView
                    android:id="@+id/tvUserCompany"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{user.company.name}"
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@+id/tvUserCompanyTitle"
                    tools:text="This is the description.."
                    />

                <View
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:background="#45CACACA"
                    app:layout_constraintTop_toBottomOf="@+id/tvUserCompany"
                    />

                <TextView
                    android:id="@+id/tvAlbumCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="16dp"
                    android:text="@{vm.totalAlbums > 0 ? @string/albums+` (`+String.valueOf(vm.totalAlbums)+`) ` : @string/albums}"
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@+id/line"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:text="Albums (56)"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                app:layout_constraintTop_toBottomOf="@+id/header">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvAlbums"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    app:setAdapter="@{adapter}"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:itemCount="3"
                    tools:listitem="@layout/item_album"
                    />

                <androidx.core.widget.ContentLoadingProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginVertical="16dp"
                    android:visibility="@{vm.isLoading ? View.VISIBLE : View.GONE}"
                    app:layout_constraintTop_toBottomOf="@+id/rvAlbums"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />

                <TextView
                    android:id="@+id/tvNotFound"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="16dp"
                    android:text="@string/album_not_found"
                    android:visibility="@{vm.isAlbumNotFound ? View.VISIBLE : View.GONE}"
                    app:layout_constraintTop_toBottomOf="@+id/progressBar"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</layout>